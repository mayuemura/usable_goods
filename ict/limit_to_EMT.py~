#limit_to_EMT.py
#-*- coding:utf-8 -*-
#2016/02/09
#train, testデータのlabelをEffect, MOU, Targetだけにする


import sys

def main(data_file):

    label_set = {
            "B-Cer",
            "I-Cer",
            "B-Deg",
            "I-Deg",
            "B-Null",
            "I-Null",
            "B-Com",
            "I-Com",
            "B-Part",
            "I-Part",
            "B-Loc",
            "I-Loc",
            "B-Time",
            "I-Time",
            "B-User",
            "I-User",
            "B-Ver",
            "I-Ver"
            }


    with open(data_file, "r") as fr, open(data_file+"lmtd", "w") as fw:
        for line in fr:
            if line == "\n":
                fw.write(line)

            else:
                BIO, word, POS = line.split("\t")
                if BIO in label_set:
                    fw.write("{}\t{}\t{}".format("O", word, POS))
                else:
                    fw.write(line)

if __name__ == "__main__":
    main(sys.argv[1])
